#!/bin/sh


mkdir /var/grid-core
cp -R * /var/grid-core
rm -f /var/grid-core/install*
groupadd -g 800 herculiz
useradd herculiz -u 800 -g herculiz -d /tmp -s /bin/nologin
chown -R herculiz:herculiz /var/grid-core
chmod -R a+rw /var/grid-core
mv /var/grid-core/bin/core.bin /usr/bin/core
mv /var/grid-core/bin/grid-core.service /usr/lib/systemd/system/grid-core.service
rm -f /var/grid-core/bin/grid-core.sh
systemctl enable grid-core.service
echo "grid CORE is installed OK"
echo
